<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextInputLabel" parent="AppTheme">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_body_2</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLabel.Bold" parent="TextInputLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTitle" parent="AppTheme">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="Title" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <style name="Title.Bold" parent="Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="Subtitle.Bold" parent="Subtitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Description" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Description.Bold" parent="Description">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
